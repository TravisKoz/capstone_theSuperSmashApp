<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlsActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/control_table"
            android:background="@color/black"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <TableRow
                android:id="@+id/control_row1"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text1"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Control stick ← or →"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc1"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:text="Walk or run if you flick the stick"
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />

            </TableRow>

            <TableRow
                android:id="@+id/control_row2"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text2"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Control stick ↑ or X/Y button"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc2"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="40dp"
                    android:text="Jump, double jump"
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />


            </TableRow>

            <TableRow
                android:id="@+id/control_row3"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text3"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Control stick ↓"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc3"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Crouch"
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />


            </TableRow>

            <TableRow
                android:id="@+id/control_row4"
                android:background="?attr/colorPrimary"
                android:layout_width="300dp"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text4"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Shield Button"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc4"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="36dp"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Shield/Guard: A bubble that blocks all attacks. It shrinks when hit, becoming less effective. Likely causing a shield-poke."
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />


            </TableRow>

            <TableRow
                android:id="@+id/control_row5"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text5"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Shield button + Control stick ↓"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc5"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Spot-dodge"
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />


            </TableRow>

            <TableRow
                android:id="@+id/control_row6"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text6"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Shield button + Control stick ←/→"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc6"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Roll - You are immune to damage only in the middle of the animation as you move left or right. Becomes stale with frequent use."
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />


            </TableRow>

            <TableRow
                android:id="@+id/control_row7"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/control_text7"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Control stick ↓"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/control_text_desc7"
                    android:textColor="@color/white"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:text="Crouch"
                    app:layout_constraintBottom_toBottomOf="@+id/control_text1"
                    app:layout_constraintStart_toEndOf="@+id/control_text1"
                    app:layout_constraintTop_toTopOf="@+id/control_text1" />


            </TableRow>
        </TableLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>